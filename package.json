{
  "name": "@pomgui/json-compress",
  "version": "1.0.0-alpha.5",
  "description": "Small footpring json compacter",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "tsup src/index.ts --format cjs --dts --out-dir dist --clean --sourcemap --minify",
    "test": "jest",
